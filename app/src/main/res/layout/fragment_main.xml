<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main" />

        <Button
            android:id="@+id/buttonToEditName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Name" />

        <Button
            android:id="@+id/buttonToCreateSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create session" />

        <Button
            android:id="@+id/buttonToFavoriteMovies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite movies" />

        <Button
            android:id="@+id/buttonToConnectingToSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connecting to a session" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>